@model List<ToDoListApp.Models.ToDoItem>

@{
    ViewData["Title"] = "Список завдань";
}

<h1>Список завдань</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Створити нове завдання</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Назва</th>
            <th>Опис</th>
            <th>Статус</th>
            <th>Дата створення</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    @if (item.IsCompleted)
                    {
                        <span class="badge bg-success">Виконано</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">В процесі</span>
                    }
                </td>
                <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Деталі</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>